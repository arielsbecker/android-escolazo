<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arseb.escolazo.MainActivity" >

    <TextView
        android:id="@+id/textviewListaJuegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/lvGameDescription"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textGeneratedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/defaultStartingValue"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <Spinner
            android:id="@+id/spinnerListaJuegos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textviewListaJuegos"
            android:layout_alignStart="@+id/textviewListaJuegos"
            android:layout_below="@+id/textviewListaJuegos"
            android:layout_marginTop="32dp"
            android:entries="@array/juegosLoteriaNacional"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonGenerar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:onClick="generarAleatorio"
            android:text="@string/button_generate" />

</RelativeLayout>
